// tsconfig.eslint.json
{
  "compilerOptions": {
    "types": ["@types/node"],
    "noEmit": true,
    "allowJs": true
  },
  "extends": "./tsconfig.json",
  "include": [
    "./**/*.ts",
    "./**/*.js",
    "./.*.js",
    "./**/*.jsx",
    "./**/*.tsx",
    "./**/*.cjs",
    "./**/*.mjs",
    "./.*.vue",
    "./**/*.vue",
    "./.*.astro",
    "./**/*.astro"
  ]
}
