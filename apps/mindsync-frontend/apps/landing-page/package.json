	"scripts": {
		"astro": "astro",
		"build": "astro build",
        "check": "echo âœ”\uFE0E Checking Landing Page && pnpm run lint && pnpm run test",
        "lint": "echo \uD83E\uDE84 Linting Landing Page && eslint --ignore-path .gitignore . && stylelint **/*.scss --allow-empty-input",
        "lint:fix": "echo \uD83E\uDE84 Linting Fix Landing Page && eslint --fix --ignore-path .gitignore . && stylelint --fix **/*.scss --allow-empty-input",
        "clean": "rm -rf dist",
