---
import { Icon } from 'astro-icon'
import WorldGraph from 'atoms:WorldGraph';
---
<div class="absolute right-1/2 lg:right-1/3 top-0 z-50 shrink-0 hidden sm:flex sm:items-center sm:justify-center ">
	<div class="absolute h-[478px] min-h-[1em] w-1 self-stretch bg-gradient-to-t from-primary-500 via-secondary-500 to-secondary-300"></div>
	<div class="absolute w-80 h-[878px] bg-gradient-to-t from-primary-500 top-0 blur-3xl bg-opacity-20 opacity-20 rounded-b-full"></div>
	<div class="opacity-5 w-[166px] h-[478px] relative">
		<Icon name="dot-grid-effect"
			class="absolute left-0 top-0 w-full h-full text-tertiary-700 dark:text-tertiary-300 rounded-full"/>
	</div>
	<div class="absolute top-full left-0 ">
		<WorldGraph />
	</div>
</div>
